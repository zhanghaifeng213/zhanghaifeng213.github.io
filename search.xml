p .tp .show .show{display:block;}<br>    </style><br>    </head><br>    <body><br>        <div class="wrap"><br>            <ul class="tab"><br>                <li>风景</li><br>                <li>鲜花</li><br>                <li>美女</li><br>                <li>汽车</li><br>            </ul><br>            <div class="tp"><br>                <div class="show"><br>                    <img class="show" src="images/f1.jpg"><br>                    <img src="images/f2.jpg"><br>                    <img src="images/f3.jpg"><br>                    <ul></ul><br>                </div><br>                <div><br>                    <img class="show" src="images/x1.jpg"><br>                    <img src="images/x2.jpg"><br>                    <img src="images/x3.jpg"><br>                    <img src="images/x4.jpg"><br>                    <ul></ul><br>                </div><br>                <div><br>                    <img class="show" src="images/m1.jpg"><br>                    <img src="images/m2.jpg"><br>                    <img src="images/m3.jpg"><br>                    <img src="images/m4.jpg"><br>                    <img src="images/m5.jpg"><br>                    <ul></ul><br>                </div><br>                <div><br>                    <img class="show" src="images/q1.jpeg"><br>                    <img src="images/q2.jpeg"><br>                    <img src="images/q3.jpeg"><br>                    <img src="images/q4.jpeg"><br>                    <ul></ul><br>                </div><br>            </div><br>        </div><br>        <script><br>            var aLi = document.querySelectorAll(“.wrap .tab li”);<br>            var aBox = document.querySelectorAll(“.wrap .tp div”);<br>            var arr = [];<br>            var imgL=[];<br>            var ul = [];<br>            var aLi2=[];<br>            var index=0;<br>            for(i=0;i&lt;4;i++){<br>                ul[i] = aBox[i].querySelector(“ul”);<br>                // console.log(ul);<br>                arr[i]=aBox[i].querySelectorAll(“img”);<br>                aLi[i].i=i;<br>                aLi[i].onmouseenter=function(){<br>                    for(j=0;j&lt;4;j++){<br>                    aBox[j].className=””;};<br>                    aBox[this.i].className=”show”;<br>                    index=0;<br>                }<br>                imgL[i]=arr[i].length;<br>                // console.log(imgL);<br>                ul[i].innerHTML=””;<br>                for (j=0;j&lt;imgL[i];j++){<br>                    ul[i].innerHTML +=”<li>“+(j+1)+”</li>“;<br>                    ul[i].style.width=imgL[i]</em>30+”px”;<br>                    ul[i].style.marginLeft=-imgL[i]*30/2+”px”;<br>                };<br>                aLi2[i] = ul[i].querySelectorAll(“.wrap .tp div ul li”);<br>                console.log(aLi2[i].length);<br>                for (j=0;j<aLi2[i].length;j++){
                    aLi2[i][j].i=i;
                    aLi2[i][j].j=j;
                    console.log(arr[i][j]);
                    aLi2[i][j].onmouseenter=function(){
